{{#get "posts" filter="featured:true" limit="10" include="tags" as |featured|}}{{#if featured}}
  <div class="slider-wrapper">
    <div class="featured-posts splide">
      <div class="splide__track">
        <div class="splide__list">
          {{#foreach featured}}
            <article class="{{post_class}}{{#unless feature_image}} no-image{{/unless}} splide__slide">
              <a class="featured-post-link" href="{{url}}">
                <div class="featured-post-tab">
                  <div class="featured-post-tab-pc">
                    <div>
                      {{> "icons/folder-tab" idx=@index }}
                    </div>
                    <p>
                      <span class="featured-post-tab-label-icon">ğŸ“–</span>
                      <span class="featured-post-tab-label-text">READ!</span>
                    </p>
                  </div>
                </div>
                <div class="featured-post-body" data-index="{{@index}}">
                  <p>
                    <i>
                      <img src='{{asset "images/quote.svg"}}' alt="quote" width="32" height="24"/>
                    </i>
                    <span>{{title}}</span>
                  </p>
                  <figure class="post-media">
                    {{#if feature_image}}
                      <img src="{{img_url feature_image size="m"}}" width="420" height="420" alt="{{title}}"
                           loading="lazy">
                    {{/if}}
                  </figure>
                </div>
              </a>
            </article>
          {{/foreach}}
        </div>
      </div>
    </div>
  </div>
{{/if}}{{/get}}